{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend of bodhimitra (solace to your mind)",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec node --experimental-specifier-resolution=node src/index.js",
    "start": "node --experimental-specifier-resolution=node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/config/",
      "/utils/"
    ]
  },
  
  "keywords": [
    "javascript",
    "node",
    "bodhimitra"
  ],
  "author": "Abhinav & Abhishek",
  "license": "ISC",
   
  "devDependencies": {
    "nodemon": "^3.1.11"
  },

  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.12",
    "nodemailer-sendgrid": "^1.0.3",
    "prettier": "^3.7.4",
    "socket.io": "^4.8.3",
    "validator": "^13.15.26"
  }
}
